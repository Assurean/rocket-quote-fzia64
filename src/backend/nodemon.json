{
  "watch": [
    "services/**/*.ts",
    "services/**/*.json"
  ],
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "node_modules",
    "dist",
    "coverage"
  ],
  "ext": ".ts,.js,.json",
  "exec": "ts-node --project tsconfig.json",
  "delay": 1000,
  "verbose": true,
  "env": {
    "NODE_ENV": "development",
    "TS_NODE_PROJECT": "tsconfig.json"
  }
}